{
  "name": "minecraft_cmd_cli",
  "private": false,
  "version": "0.0.0",
  "description": "Generate Minecraft Java Edition command on CLI.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "bin": {
    "Minecraft_cmd_CLI": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "postbuild": "node -e \"require('fs').chmodSync('dist/index.js', 0o755)\"",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "dev": "ts-node --esm src/index.ts",
    "start": "pnpm build && node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "lint-staged": "lint-staged",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "cli",
    "scaffold",
    "typescript",
    "generator"
  ],
  "author": "zibasan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zibasan/minecraft-cmd-cli.git"
  },
  "bugs": {
    "url": "https://github.com/zibasan/minecraft-cmd-cli/issues"
  },
  "homepage": "https://github.com/zibasan/minecraft-cmd-cli#readme",
  "dependencies": {
    "@eslint/json": "^0.14.0",
    "chalk": "^5.6.2",
    "clipboardy": "^5.1.0",
    "commander": "^14.0.2",
    "inquirer": "^13.2.1",
    "ora": "^9.1.0",
    "typescript-eslint": "^8.54.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.28.2"
}